<h1>Lost-and-Found</h1>

<ul>
  {{#each lost}}
  <li>
    <li>
      <p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">Item Lost:</span> {{this.thing}}</p>
      <p><span class="label">Date Lost:</span> {{this.date_lost}}</p>
      <p><span class="label">Time Lost:</span> {{this.time_lost}}</p>
      <p><span class="label">Description:</span> {{this.description}}</p>

      <button data-id="{{this.id}}" class="updateFound">Found!</button>

    </li>
    {{/each}}
</ul>

<h2>Add a Lost Item</h2>
<form>
  <div class="form-group">
    <label for="formGroupExampleInput">Add a Lost Item</label>
    <input type="text" class="form-control" id="thing_input" placeholder="What is it?">
  </div>

  <div class="form-group">
    <label for="formGroupExampleInput2">When did you lose it?</label>
    <input type="text" class="form-control" id="date_lost_input" placeholder="Date lost">
    <br>
    <input type="text" class="form-control" id="time_lost_input" placeholder="Time Lost">
  </div>

  <div class="form-group">
    <label for="formGroupExampleInput">Tell us more about it..</label>
    <input type="text" class="form-control" id="description_input" placeholder="description">
  </div>

  <div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text">Upload</span>
  </div>
  <div class="custom-file">
    <input type="file" class="custom-file-input" id="lostImage">
    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
  </div>
</div>

</form>


<h2>Update a Plan</h2>
<form id="updateplan" class="button-size">
  <select name="id">
    {{#each plans}}
    <option value="{{this.id}}">{{this.plan}}</option>
    {{/each}}
  </select>
  <textarea type="text" name="plan" placeholder="plan"></textarea>
  <button type="submit">Update Plan!</button>
</form>





<script type="text/javascript">
  $(".delplan").on("click", function (event) {
    var id = $(this).data("planid");

    // Send the DELETE request.
    $.ajax("/todos/" + id, {
      type: "DELETE"
    }).then(
      function () {
        console.log("deleted id ", id);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });



  $("#createLost").on("submit", function (event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();

    var newPlan = {
      plan: $("#createLost [name=plan]").val().trim()
    };

    // Send the POST request.
    $.ajax("/todos", {
      type: "POST",
      data: newPlan
    }).then(
      function () {
        console.log("created new plan");
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

  $("#updateplan").on("submit", function (event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();

    var id = $("[name=id]").val().trim();

    var updatedPlan = {
      plan: $("#updateplan [name=plan]").val().trim()
    };

    // Send the PUT request.
    $.ajax("/todos/" + id, {
      type: "PUT",
      data: updatedPlan
    }).then(
      function () {
        console.log("updated id ", id);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });
</script>